            "extensions": [
                "golang.go",
                "eamodio.gitlens",
                "davidanson.vscode-markdownlint",
                "ms-azuretools.vscode-docker",
                "shardulm94.trailing-spaces"
            ],
            "settings": {
                "go.useLanguageServer": true,
                "editor.formatOnSave": true
            }
        }
    }
}